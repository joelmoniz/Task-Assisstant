<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tVleftTasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="95sp"
        android:text="@string/TO_DO"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bViewbyNamelft"
        android:layout_width="190sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="15sp"
        android:text="@string/ViewBYName" />

    <Button
        android:id="@+id/bViewbydtlft"
        android:layout_width="190sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="5sp"
        android:text="@string/ViewBYDate" />

    <Button
        android:id="@+id/bViewbyprlft"
        android:layout_width="190sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="5sp"
        android:text="@string/ViewBYPriority" />

</LinearLayout>