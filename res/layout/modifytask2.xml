<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whattodo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bChangeDATEofthistask"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="@string/ChangeTask" />

    <Button
        android:id="@+id/bChangePriorityoftask"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="@string/ChangePriority" />

    <Button
        android:id="@+id/bMARKDone"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="@string/done" />

    <Button
        android:id="@+id/bREMoveTASk"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="@string/RemoveTask" />

</LinearLayout>