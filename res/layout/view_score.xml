<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tVCurrentScore"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Score : " />

    <EditText
        android:id="@+id/eTcurrentScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
	<TextView
        android:id="@+id/tVTaskDonepercentage"
        android:layout_width="wrap_content"
         android:textSize="22dp"
        android:layout_height="wrap_content"
        android:text="Total Tasks Done : " />
    <EditText
        android:id="@+id/eTtaskDonepercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tVTasksleftpercent"
        android:layout_width="wrap_content"
         android:textSize="22dp"
        android:layout_height="wrap_content"
        android:text="Total Tasks Left : " />

    <EditText
        android:id="@+id/eTtaskleftpercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/bVSDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Particular Date Tasks" />

</LinearLayout>