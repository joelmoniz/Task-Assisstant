<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tVleftTasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="LEFT OVER TASKS" />

    <Button
        android:id="@+id/bViewbyNamelft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View BY Name" />

    <Button
        android:id="@+id/bViewbydtlft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View BY Date" />

    <Button
        android:id="@+id/bViewbyprlft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View BY Priority" />

</LinearLayout>